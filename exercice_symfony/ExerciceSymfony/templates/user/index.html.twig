{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <div class="d-flex flex-column justify-content-center align-items-center mt-5">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Adresse</th>
                    <th>Téléphone</th>
                    <th>Âge</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                    <td><a href="{{ path('possession', {id: user.id}) }}">{{ user.nom }}</a></td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.adresse }}</td>
                        <td>{{ user.tel }}</td> 
                         <td>{{ user.age is not null ? user.age ~ ' ans' : 'N/A' }}</td>
                        <td>
                        <div class="d-flex gap-1">
                         <a class="btn btn-primary btn-sm" href="{{ path('edit', {id: user.id}) }}">Editer</a>
                            <form action="{{ path('delete', {id: user.id}) }}" method="delete">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                            </form>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('create') }}" class="btn btn-primary">Ajouter un utilisateur</a>
    </div>
{% endblock %}